@model MMS.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Reset Your Password";
    ViewBag.Method = "Reset";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm((string) ViewBag.Method, "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="well">
        <div class="box-blue">
            <p>Here you can reset your password or recover your username</p>
        </div>
        <div class="box-grey">
            <div class="control-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label control-label-big" })
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword)
                </div>
            </div>
        
            <div class="control-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label control-label-big" })
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
            </div>
        </div>

        <div class="box-blue">
            <p>Please answer the following security question:</p>
            <p>@Html.DisplayTextFor(m => m.SecurityQuestion)</p>
            @Html.FormLineTextBoxFor(m => m.SecurityAnswer, true)
        </div>
    </div>
    
    <div class="well">
		<button type="submit" class="btn btn-primary">Save &amp; Continue</button>
		<button type="button" class="btn">Cancel</button>
    </div>
}
