@model MMS.ViewModels.AssignMentorViewModel
@{
    ViewBag.Title = "Assign Mentee to Mentor";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="span12">
        @using (Html.BeginForm("Assign", "Mentee", FormMethod.Post, new { @class = "form-horizontal" }))
	    {
		    @Html.ValidationSummary(true)

            <div class="box-blue">
                @Html.FormLineDropDownListFor(m => m.MenteeId, (IEnumerable<SelectListItem>) ViewBag.MenteesDropDownList, true)
            </div>
            
            <div class="box-grey">
                @Html.FormLineDropDownListFor(m => m.MentorId, (IEnumerable<SelectListItem>) ViewBag.MentorsDropDownList, true)
            </div>
           
       		<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn btn-primary">Save Changes</button>
					<a href="~/Mentee" class="btn">Cancel</a>
				</div>
			</div>            
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        
    });
</script>