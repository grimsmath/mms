@model MMS.Models.Feedback
@{
    ViewBag.Title = "Contact Log Feedback";
	ViewBag.Method = "Feedback";
}

@using (Html.BeginForm((string)ViewBag.Method, "Mentor", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.ValidationSummary(true)
	@Html.HiddenFor(m => m.id)
	@Html.HiddenFor(m => m.LogId)
	@Html.HiddenFor(m => m.LeadMentorId)

	<div class="modal hide fade">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h3>@ViewBag.Title</h3>
		</div>

		<div class="modal-body">
			<div class="control-group">
                @Html.LabelFor(m => m.FeedbackBody, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextAreaFor(m => m.FeedbackBody, new { @class = "input-xxlarge" })
                </div>
	        </div>
		</div>

		<div class="modal-footer">
			<a href="#" class="btn">Close</a>
			<a href="#" class="btn btn-primary">Save changes</a>
		</div>
	</div>
}
