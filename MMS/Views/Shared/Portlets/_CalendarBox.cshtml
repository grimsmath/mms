<div class="span4 box-container portlet">
	<h3>My Calendar</h3>
	<div class="box-body">
		<div class="btn-group" style="padding: 10px; border-bottom: solid 1px #dcdcdc"">
            @Html.ActionLink("New Event", "Create", "Calendar", null, new { @class = "btn btn-info" })
		</div>
		<div id="list-calendar">
			<ul class="message-list">
			@foreach (MMS.ViewModels.EventViewModel evt in ViewBag.Events)
			{
				<li>
					<i class="icon-calendar"></i>
					<b>Event:</b>@Html.ActionLink(evt.EventName, "View/" + evt.id, "Calendar")<br />
					<b>Date/Time:</b>&nbsp;@evt.EventBegins
				</li>
			}
			</ul>
		</div>
	</div>
	<h4>@Html.ActionLink("View More", "Index", "Calendar")</h4>
</div>